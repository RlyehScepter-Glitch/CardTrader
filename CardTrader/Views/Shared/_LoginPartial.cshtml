@using CardTrader.Infrastructure.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item ms-1 me-1">
        <a  class="nav-link-custom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item ms-1 me-1">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item ms-1 me-1">
        <a class="nav-link-custom" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item ms-1 me-1">
        <a class="nav-link-custom" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
