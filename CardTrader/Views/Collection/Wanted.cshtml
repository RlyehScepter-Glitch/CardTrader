@using CardTrader.Controllers
@using CardTrader.Infrastructure.Data.Models
@using Microsoft.AspNetCore.Identity
@{

}

@if ((bool)ViewData["HasWanted"])
{
    <h1>Wanted List</h1>

    @foreach (Card card in (List<Card>)ViewData["Cards"])
        {
            <div class="card-small">
                <div class="card-header-small">
                    @card.Name
                </div>
                <div class="card-body-small">
                    <img src="@card.ImageUrl" align="middle" width="177" height="258"></img>
                </div>
            </div>
        }

    <a href="~/Card/Create">
        <div class="button">Add Card</div>
    </a>
}
else
{

    <div class="card">
        <div class="card-header">
            You don't have a Wanted List
        </div>
        <div class="card-body">
            <a asp-controller="Collection" asp-action="CreateWanted">
                <div class="button">Create Wanted List</div>
            </a>
        </div>
    </div>
}